<?xml version="1.0" encoding="utf-8"?>
<Project  xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<UsingTask TaskName="EmCxx" AssemblyFile="..\..\Bin\EmscriptenTask.dll"/>
	<UsingTask TaskName="EmLink" AssemblyFile="..\..\Bin\EmscriptenTask.dll"/>
	<Target Name="Build">
    
        <PropertyGroup>
            <DoVerbose>true</DoVerbose>
        </PropertyGroup>

		<EmCxx Sources="main.cpp" 
		      Verbose="$(DoVerbose)" 
		      AdditionalIncludeDirectories="$(EMSDK);.;../"
			  ObjectFileName="Debug2\main.abcdefg"
		      />

		<EmLink Sources="Debug2\main.abcdefg"
		        Verbose="$(DoVerbose)"
		        OutputFile="main2.wasm"/>

		<Exec Command="$(EMSDK)\upstream\bin\wavm.exe run main2.wasm"/>
	</Target>
</Project>
